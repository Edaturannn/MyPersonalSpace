@{
    ViewData["Title"] = "Şifremi Unuttum";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifreyi Unuttum</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff;
        }

        .card {
            border: none;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .btn-primary {
            background-color: #6a11cb;
            border-color: #6a11cb;
        }

            .btn-primary:hover {
                background-color: #2575fc;
                border-color: #2575fc;
            }

        a {
            color: #6a11cb;
        }

            a:hover {
                color: #2575fc;
            }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
            <h3 class="text-center mb-4" style="color: #6a11cb;">Şifremi Unuttum</h3>
            <p>Şifre sıfırlama bağlantısını almak için kayıtlı e-posta adresinizi girin.</p>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label for="email">E-Posta Adresi</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Şifre Sıfırlama Linki Gönder</button>
            </form>
        </div>
    </div>
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-info mt-3">
            @ViewData["Message"]
        </div>
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
