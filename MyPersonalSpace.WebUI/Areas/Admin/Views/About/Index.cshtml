@{
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

@model List<ResultAboutDto>

<section class="blog-list px-3 py-5 p-md-5">
    <h1>Benim Hakkımda</h1>
    <div class="container single-col-max-width">
        <table class="table table-striped table-bordered" id="aboutTable">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Benim Hakkımda</th>
                    <th>İçerik</th>
                    <th>Profile</th>
                    <th>Github</th>
                    <th>Linkedin</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.AboutMe</td>
                            <td>@item.Content</td>
                            <td>
                                <img class="img-fluid post-thumb" src="~/UsersTheme/assets/images/@item.Profile" alt="image" style="width: 50px; height: 50px;">
                            </td>
                            <td>@item.Github</td>
                            <td>@item.Linkedin</td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/Admin/About/UpdateAbout/@item.AboutId">Güncelle</a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="/Admin/About/DeleteAbout/@item.AboutId">Sil</a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">Henüz hiç gönderi bulunmamaktadır.</td>
                    </tr>
                }
            </tbody>
        </table>

        <script>$(document).ready(function () {
                $('#aboutTable').DataTable();
            });</script>
        <nav class="blog-nav nav nav-justified my-5">
            <a class="nav-link-prev nav-item nav-link d-none rounded-left" href="#">Previous<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
            <a class="nav-link-next nav-item nav-link rounded" href="#">Next<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
        </nav>

        <a class="btn btn-info" href="/Admin/About/UpdateAbout">Hakkımda Güncelle</a>
    </div>
</section>
