<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
@model CreateContactDto
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Bize Ulaşın</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Adınız</label>
                    <input type="text" class="form-control" id="name" name="Name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Konu</label>
                    <input type="text" class="form-control" id="subject" name="Subject" required>
                </div>
                <div class="mb-3">
                    <label>Mesaj</label>
                    <div id="editor"></div> <!-- Quill Editör Alanı -->
                    <input type="hidden" id="Message" name="Message" asp-for="Message" />
                </div>

                <input type="hidden" class="form-control" asp-for="CreatedAt" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff zzz")" />

                <button type="submit" class="btn btn-primary w-100">Gönder</button>
            </form>
        </div>
    </div>
</div>
<br />
<br />
<br />
<script>var quill = new Quill('#editor', {
        theme: 'snow',
        placeholder: 'İçeriğinizi buraya yazın...',
        modules: {
            toolbar: [
                [{ 'header': [1, 2, false] }],
                ['bold', 'italic', 'underline'],
                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                ['link', 'image'],
                ['clean']
            ]
        }
    });

    // Form gönderildiğinde içeriği input'a yaz
    document.querySelector('form').onsubmit = function () {
        document.querySelector("#Content").value = quill.root.innerHTML;
    };</script>